<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="HNewsButton.Borderless" parent="android:Widget.Holo.Button.Borderless">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
  </style>

  <style name="HNews.FeedAction" parent="None">
    <item name="android:layout_width">@dimen/feed_action_button_width</item>
    <item name="android:layout_height">@dimen/feed_action_button_height</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:background">@drawable/selector_card_button</item>
  </style>

    <style name="HNews.EmptyView" parent="None">
    <item name="android:text">@string/empty_view_text</item>
    <item name="android:textSize">@dimen/empty_view_text</item>
    <item name="android:textColor">@color/feed_empty_text</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/activity_horizontal_margin</item>
    <item name="fontAsset">robotoRegular</item>
  </style>


</resources>
